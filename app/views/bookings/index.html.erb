<h1>Listing bookings</h1>

<table>
  <tr>
    <th>Movie</th>
    <th>Showing</th>
    <th>Number of seats</th>
    <th>Customer name</th>
    <th>Phone</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookings.each do |booking| %>
  <tr>
    <td><%= booking.movie_id %></td>
    <td><%= booking.showing_id %></td>
    <td><%= booking.number_of_seats %></td>
    <td><%= booking.customer_name %></td>
    <td><%= booking.phone %></td>
    <td><%= booking.email %></td>
    <td><%= link_to 'Show', booking %></td>
    <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
    <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

