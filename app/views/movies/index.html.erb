<h1>Listing all available movies</h1>

<section id = "table">
<table class = "table table-bordered table-striped">
  <tr>
    <th>Title</th>
    <th>Cast</th>
    <th>Duration</th>
    <th>Genre</th>
    <th>Rating</th>
    <th>Poster</th>
    <th>Book</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.cast %></td>
    <td><%= movie.duration %></td>
    <td><%= movie.genre %></td>
    <td><%= movie.rating %></td>
    <td><img src = "<%= movie.image_url%>"></td>
    <td><%= link_to 'Find show dates', showings_path %></td>
  </tr>
<% end %>
</table>

